@using MiroAutoCenter.Core.Constants

@if (this.User.IsInRole(UserConstants.Administrator) || this.User.IsInRole(UserConstants.Receptionist))
{
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="/" class="brand-link">
            <span class="brand-text font-weight-light" id="admin-panel">Администраторски <br> панел</span>
        </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a class="d-block text-center" id="admin-welcome">Добре дошли в<br>администраторския панел, <br><b>@this.User.Identity?.Name</b></a>
                </div>
            </div>

        <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" id="options-list" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-header">Опции</li>
                @if (this.User.IsInRole(UserConstants.Administrator)){
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Services" asp-action="Add" class="nav-link">
                                <i class="nav-icon fa-solid fa-wrench"></i>
                                <p>
                                    Добавяне на услуга
                                    <span class="badge badge-info right"></span>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="RoleManage" asp-controller="UserRole" asp-action="ManageUsers" class="nav-link">
                                <i class="nav-icon fas fa-user-cog"></i>
                                <p>
                                    Управление на роли
                                </p>
                            </a>
                        </li>
                }else{
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Admin" asp-action="ApproveServices" class="nav-link">
                            <i class="nav-icon fa-solid fa-check"></i>
                            <p>
                                Заявки за одобрение
                            </p>
                        </a>
                    </li>
                }  
                </ul>
            </nav>
    </div>
</aside>
}

<script src="https://kit.fontawesome.com/6121d3cb46.js" crossorigin="anonymous"></script>

<style>
    #admin-panel{
        margin-left: 10px;
    }
</style>