@using MiroAutoCenter.Core.Models.ServicesCars
@model ServiceCarAddFormModel

@{
    ViewData["Title"] = "Запази час";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Запази час</h3>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group col-md-9">
                            <label class="control-label">Автомобил</label>
                            <select asp-for="CarId" class="form-control">
                            @foreach (var car in Model.UserCars)
                            {
                                        <option value = "@car.Id">@car.Make - @car.PlateNumber</option>
                            }
                            </select>
                        <span asp-validation-for="CarId" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label>Ден и час</label>
                        <input asp-for="Time" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")">
                        <span asp-validation-for="Time" class="text-danger"></span>
                        <div class="card-body">
                            <a asp-controller="Services" asp-action="All" class="btn btn-secondary">Отмяна</a>
                            <button type="submit" class="btn btn-primary float-right">Добавяне</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
