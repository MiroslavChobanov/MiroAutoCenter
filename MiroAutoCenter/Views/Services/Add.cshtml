@using MiroAutoCenter.Core.Models.Services
@model ServiceAddFormModel


<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-primary" id="add-car-container">
            <div class="card-header" id="add-car-header">
                <h3 class="card-title">Добавяне на услуга</h3>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Име</label>
                        <input asp-for="Name" class="form-control" placeholder="Добавете име тук...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Описание</label>
                        <input asp-for="Description" class="form-control" placeholder="Добавете описание тук...">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Цена</label>
                        <input asp-for="Price" class="form-control" placeholder="Добавете цена тук...">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Времетраене</label>
                        <input asp-for="Time" class="form-control" placeholder="Добавете времетраене тук...">
                        <span asp-validation-for="Time" class="text-danger"></span>
                    <div class="card-body">
                        <a asp-controller="Services" asp-action="MyCars" class="cancel-btn">Отмяна</a>
                        <button type="submit" class="add-btn">Добавяне</button>
                    </div>
                 </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}