@using MiroAutoCenter.Core.Models.Services
@model ServiceAddFormModel

@{
    ViewData["Title"] = "Add service";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-primary" id="add-car-container">
            <div class="card-header" id="add-car-header">
                <h3 class="card-title">Add service</h3>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Add name here...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Add description here...">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" placeholder="Add price here...">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Time" class="control-label"></label>
                        <input asp-for="Time" class="form-control" placeholder="Add time here...">
                        <span asp-validation-for="Time" class="text-danger"></span>
                    <div class="card-body">
                        <a asp-controller="Services" asp-action="All" class="cancel-btn">Cancel</a>
                        <button type="submit" class="add-btn">Add</button>
                    </div>
                 </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}