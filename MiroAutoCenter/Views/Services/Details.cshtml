@using Microsoft.AspNetCore.Identity
@using MiroAutoCenter.Core.Constants
@using MiroAutoCenter.Core.Models.Services
@using MiroAutoCenter.Data.Models

@model ServicesListingModel
@inject SignInManager<WebsiteUser> SignInManager
@inject UserManager<WebsiteUser> UserManager

@{
    ViewBag.Title = $"{@Model.Name}";
}

<div class="row">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    Информация
                </h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Име:</dt>
                    <dd class="col-sm-6">@Model.Name</dd>
                    <dt class="col-sm-6">Описание:</dt>
                    <dd class="col-sm-6">@Model.Description</dd>
                    <dt class="col-sm-6">Цена:</dt>
                    <dd class="col-sm-6">@Model.Price.ToString("N0")</dd>
                    <dt class="col-sm-6">Времетраене:</dt>
                    <dd class="col-sm-6">@Model.Time</dd>
                </dl>
            </div>
        </div>
    </div>

    @if (this.User.IsInRole(UserConstants.Administrator))
    {
        <div class="col-md-4">
            <div class="card card-warning">
                <div class="card-header">
                    <h5 class="text-center">
                        Опции за редактиране или изтриване
                    </h5>
                </div>
                <div class="card-body">
                    <a asp-controller="Services" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning float-left">Редактирай</a>
                    <a asp-controller="Services" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-right">Изтрий</a>
                </div>
            </div>
        </div>
    }
</div>
