@using MiroAutoCenter.Core.Models.Users
@model IEnumerable<AppointmentModel>

@if (!Model.Any())
{
    <h2 class="text-center">Няма предстоящи ремонти!</h2>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h5 class="text-center">Предстоящи ремонти</h5>
                </div>
                <div>
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-12">
                                <table id="example" class="table table-bordered table-hover dataTable dtr-inline">
                                    <thead>
                                        <tr class="table-primary">
                                            <th tabindex="0" rowspan="1" colspan="1">Дата</th>
                                            <th tabindex="0" rowspan="1" colspan="1">Услуга</th>
                                            <th tabindex="0" rowspan="1" colspan="1">Автомобил</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in Model)
                                        {
                                            <tr>
                                                <td>@appointment.Time</td>
                                                <td>@appointment.ServiceName</td>
                                                <td>@appointment.CarModel</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<h5 class="text-center">Брой предстоящи ремонти: @Model.Count()</h5>


