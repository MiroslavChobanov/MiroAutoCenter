@using MiroAutoCenter.Core.Models.Users
@model UserRolesModel
@{
    ViewData["Title"] = "User roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="Name" value="@Model.Username" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>Username: @Html.DisplayFor(m => m.Username)</h3>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>User roles</label>
                    <select asp-for="RoleNames" asp-items="@items" class="form-control">
                       
                    </select>
                    <label>To add role to the current user click on it and press continue.</label>
                    <label>To remove role from the current user hold Ctrl and click on the role you want to remove and after it is not marked anymore, press continue.</label>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Continue</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>